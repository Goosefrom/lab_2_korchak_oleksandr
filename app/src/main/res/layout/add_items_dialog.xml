<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="#00BCD4">

    <TextView
        android:id="@+id/dialog_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"

        android:text="Add id, name, author and year of book\nFor add list write with coma"
        android:textColor="@color/black"

        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <EditText
        android:id="@+id/EditTextId"
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:editTextColor="@color/black"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="id"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_summary" />

        <EditText
            android:id="@+id/EditTextName"
            android:layout_width="367dp"
            android:layout_height="43dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:editTextColor="@color/black"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:hint="name"
            android:inputType="text"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextId"
            />

        <EditText
            android:id="@+id/EditTextAuthor"
            android:layout_width="367dp"
            android:layout_height="43dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:editTextColor="@color/black"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:hint="author"
            android:inputType="text"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextName"
            />

        <EditText
            android:id="@+id/EditTextYear"
            android:layout_width="367dp"
            android:layout_height="43dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:editTextColor="@color/black"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:hint="year"
            android:inputType="text"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextAuthor"
            />

    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/ll_btn_dialog"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/EditTextYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            android:background="#F44336"
            android:text="cancel"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:minWidth="140dp"
            android:minHeight="50dp"
            android:layout_height="wrap_content" />

        <Button
            android:background="#4CAF50"
            android:id="@+id/btn_add"
            android:minWidth="140dp"
            android:text="add"
            android:layout_width="wrap_content"
            android:minHeight="50dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
